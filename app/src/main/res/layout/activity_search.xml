<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:yandex="http://schemas.android.com/apk/res-auto"
    android:background="#3B8686"
    android:orientation="vertical"
    tools:context=".SearchActivityPassenger">

    <SearchView
        android:id="@+id/start_adress"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#C6CCC5"
        android:hint="Первый пункт"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <SearchView
        android:id="@+id/end_adress"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="15dp"
        android:background="#C6CCC5"
        android:hint="Второй пункт"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <ListView
        android:id="@+id/cities_list_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>
    <com.yandex.mapkit.mapview.MapView
        android:apiKey="fa9570da-773b-45e9-92f1-54a4175b5e6e"
        android:id="@+id/map_yandex"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>